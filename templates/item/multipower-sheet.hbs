<form class="{{cssClass}} item framework {{item.type}}" autocomplete="off">
  <header>
    <img
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"
      height="64"
      width="64"
    />
    <div class="name">
      <input type="text" id="name" name="name" value="{{item.name}}" />
    </div>
  </header>

  <div class="reserve">
    {{field attributes.reserve}}
  </div>

  <nav class="tabs">
    <a class="item" data-tab="slots">Slots</a>
    <a class="item" data-tab="modifiers">Modifiers</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  <section class="sheet-body">
    <div class="tab slots" data-tab="slots">
      <table>
        <thead>
          <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Power</th>
            <th>Summary</th>
            <th>Active Points</th>
            <th><a class="add-slot">
                <i class="fas fa-plus"></i>
                Add Slot
              </a></th>
          </tr>
        </thead>
        <tbody>
          {{#each slots}}
            <tr class="embedded-item" data-item-id="{{display.power.id}}">
              <td>
                {{#with attributes.type}}
                  <select data-dtype="Boolean" name="{{path}}">
                    {{selectOptions options selected=value}}
                  </select>
                {{/with}}
              </td>
              {{partial "item/partials/power-data.hbs" display.power}}
              <td>
                {{#with attributes.fullCost}}
                  <input type="number" value="{{value}}" name="{{path}}" />
                {{/with}}
              </td>
              <td class="item-controls">
                <a class="item-control item-edit" title="Edit Power">
                  <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" title="Delete Power">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="tab modifiers" data-tab="modifiers">
      <table class="advantages">
        <thead>
          <tr>
            <th>Scope</th>
            <th>Advantage</th>
            <th>Value</th>
            <th>Damage?</th>
            <th>Summary</th>
            <th>Description</th>
            <th></th></tr>
        </thead>
        <tbody>
          {{#each modifiers.advantages}}
            <tr>
              <td>
                <select name="{{scope.path}}">
                  {{selectOptions scope.options selected=scope.value}}
                </select>
              </td>
              <td><input
                  type="text"
                  value="{{name.value}}"
                  name="{{name.path}}"
                /></td>
              <td><input
                  type="number"
                  value="{{value.value}}"
                  name="{{value.path}}"
                /></td>
              <td><input
                  type="checkbox"
                  {{checked increasesDamage.value}}
                  name="{{increasesDamage.path}}"
                /></td>
              <td><input
                  type="text"
                  value="{{summary.value}}"
                  name="{{summary.path}}"
                /></td>
              <td>
                {{editor
                  description.value
                  target=description.path
                  button=true
                  editable=true
                }}
              </td>
              <td><a
                  class="modifier-delete"
                  data-id="{{id}}"
                  data-type="advantage"
                  title="Delete Modifier"
                ><i class="fas fa-trash"></i></a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <p><a class="modifier-create" data-type="advantage"><i
            class="fas fa-plus"
          ></i>
          Add Advantage</a></p>
    </div>
    <div class="tab notes flexcol" data-tab="description">
      {{field bio.description editable=editable}}
    </div>
  </section>
</form>
